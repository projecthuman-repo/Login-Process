# Server
PORT=4000

# MongoDB connection (replace placeholders)
LOCAL_URI="mongodb+srv://<DB_USER>:<DB_PASS>@<CLUSTER>.mongodb.net/<DB_NAME>?retryWrites=true&w=majority"

# reCAPTCHA (Google)
SECRET_CAPTCHA_KEY="<YOUR_RECAPTCHA_SECRET_KEY>"
SITE_CAPTCHA_KEY="<YOUR_RECAPTCHA_SITE_KEY>"

# Email (Gmail SMTP with App Password)
EMAIL_USERNAME="<YOUR_EMAIL_ADDRESS@projecthumancity.com>"
EMAIL_PASSWORD="<YOUR_APP_PASSWORD>"
EMAIL_HOST="smtp.gmail.com"
EMAIL_PORT=587

# Mastodon OAuth (if used)
MASTODON_CLIENT_ID="<YOUR_MASTODON_CLIENT_ID>"
MASTODON_CLIENT_SECRET="<YOUR_MASTODON_CLIENT_SECRET>"
MASTODON_INSTANCE_NAME="<YOUR_INSTANCE_NAME>"
MASTODON_INSTANCE_URI="<YOUR_INSTANCE_URI>"
MASTODON_REDIRECT_URI="<YOUR_REDIRECT_URI>"
MASTODON_SCOPES="read:accounts"

# (Optional) Google OAuth for frontend login
GOOGLE_CLIENT_ID="<YOUR_GOOGLE_OAUTH_CLIENT_ID>"
GOOGLE_CLIENT_SECRET="<YOUR_GOOGLE_OAUTH_CLIENT_SECRET>"

# JWT
JWT_SECRET="<YOUR_JWT_SECRET>"
JWT_EXPIRES_IN="1d"
